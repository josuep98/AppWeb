@using AppWeb.Models
@model List<RolCls>

<table class="table table-bordered table-hovered">
    <thead>
        <tr>
            <td>@Html.LabelFor(p => Model[0].IdRol)</td>
            <td>@Html.LabelFor(p => Model[0].Nombre)</td>
            <td>@Html.LabelFor(p => Model[0].Descripcion)</td>
            <td>Operaciones</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdRol</td>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>
                    <button type="button" onclick="Editar(@item.IdRol)" class="bi bi-pencil-square btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" />
                    <button type="button" onclick="Eliminar(@item.IdRol)" class="bi bi-trash btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModalConfirmacion" />
                </td>
            </tr>
        }
    </tbody>
</table>

